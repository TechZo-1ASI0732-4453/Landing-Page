---
const lang = Astro.url?.searchParams.get('lang') || 'es';
import { t } from '../../utils/i18n.js';
const translate = (key: string) => t(key, lang);
---

<footer id="footer">
    <div class="footer-container">
        <h1 class="footer-logo" data-i18n="footer.logo">{translate('footer.logo')}</h1>
        <div class="footer-bottom">
            <p class="rights" data-i18n="footer.rights">{translate('footer.rights')}</p>
            <div class="footer-right">
                <div class="footer-links">
                    <a href="#" data-i18n="footer.support">{translate('footer.support')}</a>
                    <a href="#" data-i18n="footer.privacy">{translate('footer.privacy')}</a>
                    <a href="#" data-i18n="footer.terms">{translate('footer.terms')}</a>
                </div>
                <div class="footer-social">
                    <a href="https://www.facebook.com/" target="_blank">
                        <img src="https://github.com/TechZo-1ASI0732-4453/Landing-Page/blob/main/public/assets/images/icons/icon-facebook.png?raw=true" alt="Facebook" />
                    </a>    
                    <a href="https://twitter.com/" target="_blank">
                        <img src="https://github.com/TechZo-1ASI0732-4453/Landing-Page/blob/main/public/assets/images/icons/icon-twitter.png?raw=true" alt="Twitter" />
                    </a>
                    <a href="https://www.youtube.com/" target="_blank">
                        <img src="https://github.com/TechZo-1ASI0732-4453/Landing-Page/blob/main/public/assets/images/icons/icon-youtube.png?raw=true" alt="YouTube" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    #footer {
        background-color: #18181b;
        padding: 30px 0;
        color: #fff;
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 5vw;
    }

    .footer-logo {
        font-size: 13rem;
        font-weight: bold;
        margin: 3rem auto;
        line-height: 1;
        text-align: center;
    }

    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
        padding-top: 15px;
        border-top: 1px solid #333;
        flex-wrap: wrap;
    }

    .rights {
        font-size: 1.1rem;
        margin: 0;
        align-self: center;
    }

    .footer-right {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        min-width: 180px;
        justify-content: center;
    }

    .footer-links {
        display: flex;
        gap: 30px;
    }

    .footer-links a {
        text-decoration: none;
        color: #fff;
        font-size: 1.1rem;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: #FFD146;
    }

    .footer-social {
        display: flex;
        gap: 10px;
        margin-top: 10px;
        justify-content: flex-end;
    }

    .footer-social a,
    .footer-social a img {
        width: 24px !important;
        height: 24px !important;
        min-width: 24px !important;
        min-height: 24px !important;
        max-width: 24px !important;
        max-height: 24px !important;
        object-fit: contain;
        display: block;
        padding: 0;
        margin: 0;
    }

    @media (max-width: 1024px) {
        #footer .footer-logo {
            font-size: 6rem;
        }
    }

    @media (max-width: 768px) {
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-content {
            flex: 1;
        }

        .footer-bottom {
            flex-direction: column;
            align-items: center;
        }

        .footer-right {
            align-items: center;
            margin-top: 20px;
            min-width: unset;
        }

        .footer-links {
            justify-content: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .footer-social {
            justify-content: center;
        }

        #footer .footer-logo {
            font-size: 5rem;
        }

        .rights {
            text-align: center;
            margin-bottom: 20px;
        }

        #footer {
            margin-top: auto;
        }
    }

    @media (max-width: 480px) {
        #footer .footer-logo {
            font-size: 3rem;
        }

        .footer-links a {
            font-size: 1rem;
        }

        .rights {
            font-size: 1rem;
        }
    }


</style>