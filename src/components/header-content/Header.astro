---
const lang = Astro.url?.searchParams.get('lang') || 'es';
import { t } from '../../utils/i18n.js';
const translate = (key: string) => t(key, lang);
---

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/assets/images/icons/cambiazo-icon.ico" type="image/x-icon">
    <title>CambiaZo</title>
    <style>
        header {
            background-color: #ffd146;
            padding: 8px 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        .header-content {
            width: 100%;
            max-width: 1100px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo img {
            width: 120px;
        }

        .navbar ul {
            list-style: none;
            display: flex;
            gap: 12px;
            margin: 0;
            padding: 0;
        }

        .navbar a {
            color: black;
            font-weight: 650;
            text-decoration: none;
            font-size: 15px;
            padding: 8px 12px;
            display: block;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        .navbar ul :hover {
            background-color: #ffffff;
            color: #000000;
            border-radius: 8px;
        }

        .header-buttons {
            display: flex;
            gap: 10px;
        }
        
        .header-buttons .button {
            background-color: transparent;
            border: black 2px solid;
            color: black;
            font-weight: 650;
            text-decoration: none;
            font-size: 13px;
            padding: 6px 10px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }
        
        .header-buttons .button:hover {
            background-color: #ffffff;
            color: #000000;
        }

        .menu-icon {
            display: none;
            margin-left: auto;
        }

        .menu-icon img {
            width: 35px;
            cursor: pointer;
        }

        /* Estilos para el selector de idioma */
        .lang-switcher {
            padding: 5px 10px;
            border: 2px solid black;
            border-radius: 5px;
            background-color: transparent;
            font-weight: 650;
            cursor: pointer;
            margin: 0 10px;
            transition: background-color 0.3s;
        }

        .lang-switcher:hover {
            background-color: #ffffff;
        }

        @media (max-width: 768px) {
            .navbar ul {
                display: none;
                flex-direction: column;
                gap: 8px;
                position: absolute;
                top: 52px;
                right: 32px;
                background-color: #ffd146;
                border: 1px solid black;
                border-radius: 5px;
                padding: 10px 0;
                width: 80%;
                z-index: 999;
            }

            .navbar.active ul {
                display: flex;
            }

            .header-button {
                order: 1;
                display: flex;
                align-content: end;
                margin-left: auto;
            }

            .menu-icon {
                order: 2;
                margin-right: 20px;
                display: block;
            }

            .logo img {
                width: 110px;
                margin-right: 10px;
            }

            .lang-switcher {
                margin: 0 5px;
            }
        }

        body {
            padding-top: 80px;
        }
    </style>
</head>
<body>
<header class="header">
    <div class="header-content">
        <div class="logo">
            <a href="/">
                <img src="https://cambiazo-site.netlify.app/assets/logo/cambiazo_logo.png" alt="CambiaZo" width="190px"/>
            </a>
        </div>
        <nav class="navbar">
            <ul>
                <li><a href="#features" data-i18n="header.nav.nosotros">{translate('header.nav.nosotros')}</a></li>
                <li><a href="#cards" data-i18n="header.nav.caracteristicas">{translate('header.nav.caracteristicas')}</a></li>
                <li><a href="#plans" data-i18n="header.nav.planes">{translate('header.nav.planes')}</a></li>
                <li><a href="#contact-us" data-i18n="header.nav.contactanos">{translate('header.nav.contactanos')}</a></li>
            </ul>
        </nav>
        <select id="lang-switcher" class="lang-switcher">
            <option value="en" selected={lang === 'en'}>EN</option>
            <option value="es" selected={lang === 'es'}>ES</option>
        </select>
        <div class="header-buttons">
            <a href="" class="button" data-i18n="header.buttons.pruebalo">{translate('header.buttons.pruebalo')}</a>
            <a href="https://play.google.com/store" class="button" data-i18n="header.buttons.intercambia">{translate('header.buttons.intercambia')}</a>
        </div>
        <div class="menu-icon">
            <img src="https://github.com/TechZo-1ASI0732-4453/Landing-Page/blob/experimentos/public/assets/images/icons/menu-icon.png?raw=true" alt="Menu Icon">
        </div>
    </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Mobile menu
        const menuIcon = document.querySelector('.menu-icon');
        const navbar = document.querySelector('.navbar');

        if (menuIcon && navbar) {
            menuIcon.addEventListener('click', () => {
                navbar.classList.toggle('active');
            });
        }

        // Language switcher
        const langSwitcher = document.getElementById('lang-switcher') as HTMLSelectElement;
        if (langSwitcher) {
            langSwitcher.value = new URL(window.location.href).searchParams.get('lang') || 'es';
            langSwitcher.addEventListener('change', (e) => {
                const target = e.target as HTMLSelectElement;
                if (target && target.value) {
                    const url = new URL(window.location.href);
                    url.searchParams.set('lang', target.value);
                    window.location.href = url.toString();
                }
            });
        }
    });
</script>

</body>